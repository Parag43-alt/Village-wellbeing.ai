PROJECT_NAME="Village Wellbeing AI Backend"
API_V1_STR="/api/v1"

# Database (SQLite)
DATABASE_URL="sqlite:///./village_wellbeing.db"
# For PostgreSQL, it would be something like:
# DATABASE_URL="postgresql://user:password@host:port/dbname"

# Security
SECRET_KEY="your_super_secret_key_for_jwt_32_chars_long" # CHANGE THIS! Must be a strong random string
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated, no spaces around commas)
# Example: BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,https://yourfrontenddomain.com"
# For your GitHub Pages frontend: use its deployed URL or "*" for local testing (less secure for production)
BACKEND_CORS_ORIGINS="http://localhost:5500,http://127.0.0.1:5500,*" # Adjust if your local frontend runs on a different port

# First Admin User (Optional, created on startup if not exists)
FIRST_ADMIN_EMAIL="admin@example.com"
FIRST_ADMIN_PASSWORD="changeme"